<div class="signup-login-forms">


  <div class="form-contents">
    <div class="login-html edit-form">
      <div class="login-form">
        <div class="sign-up-form">
        <%= render 'shared/errors' %>
        <%= form_for(@user) do |f| %>
          <div class="row no-gutters align-items-center">
            <div class="col-4 px-5">
              <div class="group">
                <%= f.label :name, class: 'label'%>
                <%= f.text_field :name, class: "input"%>
              </div>
              <div class="group">
                <%= f.label :username, class: 'label'%>
                <%= f.text_field :username, class: "input"%>
              </div>
              <div class="group">
                <%= f.label :email, class: 'label'%>
                <%= f.email_field :email, class: "input"%>
              </div>
              <div class="group">
                <%= f.label :password, class: 'label'%>
                <%= f.password_field :password, class: "input"%>
              </div>
            </div>
            <div class="col-4 px-5">
              <div class="group">
                <%= f.label :twitter, 'Twitter Profile Link', class: 'label'%>
                <%= f.text_field :twitter, class: "input" %>
              </div>
              <div class="group">
                <%= f.label :linkedin, 'LinkedIn Profile Link', class: 'label'%>
                <%= f.text_field :linkedin, class: "input" %>
              </div>
              <div class="group">
                <%= f.label :facebook, 'Facebook Profile Link', class: 'label'%>
                <%= f.text_field :facebook, class: "input" %>
              </div>
            </div>
            <div class="col-4 px-5">
              <div class="article-featured-image" id="article-featured">
                <div class="avatar">
                  <div id="display-avatar" class="display-avatar">
                    <% unless @user.avatar.present? %>
                      <%= gravatar_for(@user) %>
                    <% else %>
                      <%= image_tag(@user.avatar_url, id: "previewImage") %>
                    <% end %>
                    </div>

                    <%= f.label :avatar, "Change Profile Image", class: "image-label" %>
                    <%= f.file_field :avatar, id: "user_avatar", class: "file-input" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="group ">
                <%= f.submit "Update", class: "button", id: "register" %>
              </div>
          </div>
         <% end %>
        </div>
      </div>
    </div>

</div>
