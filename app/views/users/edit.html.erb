<div class="signup-login-forms">
  <div class="form-contents">
    <div class="login-html edit-form">
      <div class="title text-center">
        <%= content_tag :h2, "Edit Profile", class: "sign-up tab active text-center"%>
      </div>
      <div class="login-form">
        <div class="sign-up-form">

          <%= form_for(@user) do |f| %>

            <%= render 'shared/errors', object: f.object %>

            <div class="row">
              <div class="col-12 col-sm-6 order-2 order-sm-1">
                <div class="group">
                  <%= f.label :name, class: 'label'%>
                  <%= f.text_field :name, class: "input"%>
                </div>
                <div class="group">
                  <%= f.label :username, class: 'label'%>
                  <%= f.text_field :username, class: "input"%>
                </div>
                <div class="group">
                  <%= f.label :email, class: 'label'%>
                  <%= f.email_field :email, class: "input"%>
                </div>
                <div class="group">
                  <%= f.label :twitter, 'Twitter Profile Link', class: 'label'%>
                  <%= f.text_field :twitter, class: "input" %>
                </div>
                <div class="group">
                  <%= f.label :facebook, 'Facebook Profile Link', class: 'label'%>
                  <%= f.text_field :facebook, class: "input" %>
                </div>
                <div class="group">
                  <%= f.label :password, class: 'label'%>
                  <%= f.password_field :password, class: "input"%>
                </div>
                <div class="group text-center">
                  <%= f.submit "Update", class: "button d-inline edit-profile" %>
                </div>
              </div>
              <div class="col-12 col-sm-6 order-1 order-sm-2 mb-5 mb-sm-0">
                <div class="profile-avatar" id="article-featured">
                  <div class="avatar">
                    <div id="display-avatar" class="display-avatar">
                      <% unless avatar_present(current_user.avatar) %>
                        <%= gravatar_for(current_user, 'profile-img-lg') %>
                      <% else %>
                        <%= image_tag(current_user.avatar_url, id: "previewImage") %>
                      <% end %>
                    </div>

                    <%= f.label :avatar, "Change Profile Image", class: "image-label" %>
                    <%= f.file_field :avatar, id: "user_avatar", class: "user-avatar file-input" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
         <% end %>
        </div>
      </div>
    </div>
</div>
