
<div class="signup-login-forms">
  <div class="form-contents">
    <div class="login-html edit-form">
      <div class="title text-center">
        <%= content_tag :h2, "Profile", class: "sign-up tab active text-center"%>
      </div>
      <div class="login-form">
        <div class="sign-up-form">
          <%= form_for(current_user) do |f| %>
            <div class="row">
              <div class="col-12 col-sm-6 order-2 order-sm-1">
                <div class="group">
                  <%= f.label :name, class: 'label'%>
                  <%= f.text_field :name, class: "input", disabled: true %>
                </div>
                <div class="group">
                  <%= f.label :username, class: 'label'%>
                  <%= f.text_field :username, class: "input", disabled: true %>
                </div>
                <div class="group">
                  <%= f.label :email, class: 'label'%>
                  <%= f.email_field :email, class: "input", disabled: true %>
                </div>
                <div class="group">
                  <%= f.label :twitter, 'Twitter Profile Link', class: 'label'%>
                  <%= f.text_field :twitter, class: "input", disabled: true %>
                </div>
                <div class="group">
                  <%= f.label :linkedin, 'Linkedin Profile Link', class: 'label'%>
                  <%= f.text_field :linkedin, class: "input", disabled: true %>
                </div>
                <div class="group text-center">
                  <%= link_to "Edit Profile", edit_profile_path, class: "button edit-button d-inline", id: "edit-profile" %>
                </div>
              </div>
              <div class="col-12 col-sm-6 order-1 order-sm-2 mb-5 mb-sm-0">
                <div class="profile-avatar">
                  <% unless avatar_present(current_user.avatar) %>
                    <%= gravatar_for(current_user, 'profile-img-lg') %>
                  <% else %>
                    <%= image_tag(current_user.avatar_url, class: "avatar")%>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
