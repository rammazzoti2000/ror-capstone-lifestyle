<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <p>The form has the following <%= pluralize(@user.errors.count, 'error')%>:</p>
    <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li>
          <%= error %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
