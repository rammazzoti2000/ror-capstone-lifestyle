            <li class="nav-item profile">
              <%= image_tag('https://cdn-images-1.medium.com/fit/c/64/64/2*zHvL82OxLLlRKP443IE88g.jpeg', alt: "profile-image", class: 'profile-img-lg') %>
              <ul class="navbar profile-dropdown">
                <li class="nav-item profile-name-content">
                  <%= image_tag('https://cdn-images-1.medium.com/fit/c/64/64/2*zHvL82OxLLlRKP443IE88g.jpeg', alt: "profile-image", class: 'profile-img-sm') %>
                  <div class="profile-name">
                    <span><%= @current_user.name %></span>
                    </span>@<%= @current_user.username %></span>
                  </div>
                </li>
                <li class="nav-item prof">
                  <%= link_to "Dashboard", logout_path, class: "nav-link" %>
                </li>
